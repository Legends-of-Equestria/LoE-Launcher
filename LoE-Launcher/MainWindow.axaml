<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Width="900" Height="550"
        MinWidth="800" MinHeight="500"
        x:Class="LoE_Launcher.MainWindow"
        Title="LoE Launcher"
        TransparencyLevelHint="AcrylicBlur"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaTitleBarHeightHint="30"
        FontFamily="Segoe UI, SF Pro Display, Arial, sans-serif">

    <Window.Styles>
        <Style Selector="Button">
            <Setter Property="Transitions">
                <Transitions>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2" />
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="Button.IconButton">
            <Setter Property="Background" Value="#33FFFFFF" />
            <Setter Property="Width" Value="38" />
            <Setter Property="Height" Value="38" />
            <Setter Property="CornerRadius" Value="19" />
            <Setter Property="Padding" Value="6" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#40F0BE4A" />
        </Style>
        <Style Selector="Button.IconButton:pointerover">
            <Setter Property="Background" Value="#66FFFFFF" />
            <Setter Property="BorderBrush" Value="#80F0BE4A" />
            <Setter Property="RenderTransform" Value="scale(1.05)" />
        </Style>
        <Style Selector="Button.IconButton:pressed">
            <Setter Property="Background" Value="#22FFFFFF" />
            <Setter Property="RenderTransform" Value="scale(0.95)" />
        </Style>
        <Style Selector="Button.settings-button:pointerover">
            <Setter Property="Background" Value="#E49AE0" />
            <Setter Property="BorderBrush" Value="#F8D78C" />
            <Setter Property="RenderTransform" Value="scale(1.03)" />
        </Style>
        <Style Selector="Button.settings-button:pressed">
            <Setter Property="Background" Value="#B66DB2" />
            <Setter Property="BorderBrush" Value="#E8B75C" />
            <Setter Property="RenderTransform" Value="scale(0.98)" />
        </Style>
        <Style Selector="Border.InfoPanel">
            <Setter Property="Background" Value="#30FFFFFF" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#f0be4a" />
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.2" />
                    <BrushTransition Property="BorderBrush" Duration="0:0:0.2" />
                </Transitions>
            </Setter>
        </Style>
    </Window.Styles>

    <Grid>
        <Panel>
            <Image x:Name="backgroundImage"
                   Stretch="UniformToFill"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch" />
            <Rectangle Fill="#25000000" />
        </Panel>

        <Grid VerticalAlignment="Top">
            <Grid VerticalAlignment="Top"
                  Background="Transparent"
                  IsHitTestVisible="True"
                  Height="50"
                  PointerPressed="OnTitleBarPointerPressed" />

            <Image x:Name="logoImage"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   Width="203"
                   Height="108"
                   Margin="0,40,20,0" />
        </Grid>

        <StackPanel VerticalAlignment="Bottom"
                    Margin="20,0,20,20"
                    Spacing="14">

            <Border Classes="InfoPanel"
                    Padding="18,14">
                <TextBlock x:Name="lblDownloadedAmount"
                           Text="Ready to Launch!&#x0A;0B downloaded"
                           FontSize="14"
                           FontWeight="Medium"
                           Foreground="#F0FFFFFF"
                           TextWrapping="Wrap" />
            </Border>

            <Border Classes="InfoPanel"
                    Padding="4"
                    ClipToBounds="True">
                <ProgressBar x:Name="pbState"
                             Height="14"
                             CornerRadius="5"
                             HorizontalAlignment="Stretch"
                             Value="100">
                    <ProgressBar.Transitions>
                        <Transitions>
                            <DoubleTransition Property="Value" Duration="0:0:0.3" Easing="CubicEaseOut"/>
                        </Transitions>
                    </ProgressBar.Transitions>
                    <ProgressBar.Foreground>
                        <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,0%">
                            <GradientStop Offset="0" Color="#9C69B5" />
                            <GradientStop Offset="1" Color="#D686D2" />
                        </LinearGradientBrush>
                    </ProgressBar.Foreground>
                </ProgressBar>
            </Border>

            <Grid ColumnDefinitions="*,Auto,Auto">
                <Border Grid.Column="0" 
                        Background="#15FFFFFF" 
                        CornerRadius="6" 
                        Padding="10,5"
                        Margin="0,0,10,0">
                    <TextBlock x:Name="lblVersion"
                               Text="Launcher Version: 0.5 Platform: WindowsX64"
                               Foreground="#E0FFFFFF"
                               FontSize="12"
                               VerticalAlignment="Center" />
                </Border>

                <Button x:Name="btnSettings"
                        Grid.Column="1"
                        Margin="0,0,10,0"
                        Classes="IconButton"
                        Click="OnSettingsButtonClicked"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        ToolTip.Tip="Settings">
                    <Panel>
                        <Image Width="20" Height="20" 
                               Source="avares://LoE-Launcher/Assets/Gear.png" />
                    </Panel>
                </Button>

                <Button x:Name="btnAction"
                        Content="Launch"
                        Foreground="White"
                        Click="OnActionButtonClicked"
                        Grid.Column="2"
                        Width="150"
                        Height="46"
                        FontSize="16"
                        FontWeight="SemiBold"
                        CornerRadius="23"
                        VerticalContentAlignment="Center"
                        HorizontalContentAlignment="Center"
                        Padding="12,0">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,0%">
                            <GradientStop Offset="0" Color="#9C69B5" />
                            <GradientStop Offset="1" Color="#D686D2" />
                        </LinearGradientBrush>
                    </Button.Background>
                    <Button.Styles>
                        <Style Selector="Button:pointerover /template/ ContentPresenter">
                            <Setter Property="Background">
                                <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,0%">
                                    <GradientStop Offset="0" Color="#B37DC7" />
                                    <GradientStop Offset="1" Color="#E49AE0" />
                                </LinearGradientBrush>
                            </Setter>
                            <Setter Property="RenderTransform" Value="scale(1.03)" />
                        </Style>
                        <Style Selector="Button:pressed /template/ ContentPresenter">
                            <Setter Property="Background">
                                <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,0%">
                                    <GradientStop Offset="0" Color="#7E529A" />
                                    <GradientStop Offset="1" Color="#B66DB2" />
                                </LinearGradientBrush>
                            </Setter>
                            <Setter Property="RenderTransform" Value="scale(0.98)" />
                        </Style>
                    </Button.Styles>
                </Button>
            </Grid>
        </StackPanel>
    </Grid>
</Window>