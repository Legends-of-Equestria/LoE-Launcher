<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Width="1024" Height="576"
        MinWidth="900" MinHeight="506"
        x:Class="LoE_Launcher.MainWindow"
        Title="LoE Launcher"
        Icon="avares://LoE-Launcher/Assets/Icon.ico"
        TransparencyLevelHint="AcrylicBlur"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaTitleBarHeightHint="30"
        FontFamily="Segoe UI, SF Pro Display, Arial, sans-serif">

    <Window.Styles>
        <Style Selector="Button">
            <Setter Property="Transitions">
                <Transitions>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2" />
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="Button.SocialButton">
            <Setter Property="Background" Value="#33FFFFFF" />
            <Setter Property="Width" Value="50" />
            <Setter Property="Height" Value="50" />
            <Setter Property="CornerRadius" Value="25" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
        <Style Selector="Button.SocialButton:pointerover">
            <Setter Property="Background" Value="#66FFFFFF" />
            <Setter Property="RenderTransform" Value="scale(1.05)" />
        </Style>
        <Style Selector="Button.SocialButton:pressed">
            <Setter Property="Background" Value="#22FFFFFF" />
            <Setter Property="RenderTransform" Value="scale(0.95)" />
        </Style>
        <Style Selector="Button.SettingsButton">
            <Setter Property="Width" Value="70" />
            <Setter Property="Height" Value="70" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Transitions">
                <Transitions>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2" />
                </Transitions>
            </Setter>
            <Setter Property="Template">
                <ControlTemplate>
                    <Grid>
                        <Border x:Name="PART_Border"
                                Background="#9C69B5"
                                CornerRadius="35"
                                BorderThickness="0">
                            <Image x:Name="PART_Icon"
                                   Width="36" Height="36"
                                   Source="avares://LoE-Launcher/Assets/Gear.png"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Opacity="1.0">
                                <Image.Transitions>
                                    <Transitions>
                                        <DoubleTransition Property="Opacity" Duration="0:0:0.2" />
                                    </Transitions>
                                </Image.Transitions>
                            </Image>
                        </Border>
                        
                        <Rectangle x:Name="TintLayer"
                                   Fill="Transparent"
                                   RadiusX="35"
                                   RadiusY="35"
                                   Opacity="0"
                                   IsHitTestVisible="False">
                            <Rectangle.Transitions>
                                <Transitions>
                                    <BrushTransition Property="Fill" Duration="0:0:0.2" />
                                    <DoubleTransition Property="Opacity" Duration="0:0:0.2" />
                                </Transitions>
                            </Rectangle.Transitions>
                        </Rectangle>
                    </Grid>
                </ControlTemplate>
            </Setter>
        </Style>
        
        <Style Selector="Button.SettingsButton:not(:pointerover):not(:pressed) /template/ Rectangle#TintLayer">
            <Setter Property="Fill" Value="Transparent" />
            <Setter Property="Opacity" Value="0" />
        </Style>
        
        <Style Selector="Button.SettingsButton:pointerover /template/ Image#PART_Icon">
            <Setter Property="Opacity" Value="0.95" />
        </Style>
        <Style Selector="Button.SettingsButton:pointerover /template/ Rectangle#TintLayer">
            <Setter Property="Fill" Value="#FFFFFF" />
            <Setter Property="Opacity" Value="0.4" />
        </Style>
        <Style Selector="Button.SettingsButton:pointerover">
            <Setter Property="RenderTransform" Value="scale(1.03)" />
        </Style>
        
        <Style Selector="Button.SettingsButton:pressed /template/ Image#PART_Icon">
            <Setter Property="Opacity" Value="0.85" />
        </Style>
        <Style Selector="Button.SettingsButton:pressed /template/ Rectangle#TintLayer">
            <Setter Property="Fill" Value="#000000" />
            <Setter Property="Opacity" Value="0.5" />
        </Style>
        <Style Selector="Button.SettingsButton:pressed">
            <Setter Property="RenderTransform" Value="scale(0.97)" />
        </Style>
        <Style Selector="Border.InfoPanel">
            <Setter Property="Background" Value="#30FFFFFF" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#f0be4a" />
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.2" />
                    <BrushTransition Property="BorderBrush" Duration="0:0:0.2" />
                </Transitions>
            </Setter>
        </Style>
    </Window.Styles>

    <Grid>
        <Panel>
            <Image x:Name="backgroundImage"
                   Stretch="UniformToFill"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch" />
            <Rectangle Fill="#25000000" />
        </Panel>

        <!-- Draggable title bar area -->
        <Rectangle x:Name="titleBarArea"
                   Height="30"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Stretch"
                   Fill="Transparent" />

        <Grid VerticalAlignment="Top" ZIndex="10">

            <!-- Social Media Panel - Top Left -->
            <StackPanel HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="20,40,0,0"
                        Spacing="10">

                <Button x:Name="btnYoutube"
                        Classes="SocialButton"
                        Click="OnYoutubeButtonClicked"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        ToolTip.Tip="YouTube">
                    <Panel>
                        <Path Data="{StaticResource YouTubeIconPath}"
                              Fill="White"
                              Width="22"
                              Height="22"
                              Stretch="Uniform"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Margin="0,5,0,0"
                              />
                    </Panel>
                </Button>

                <Button x:Name="btnDiscord"
                        Classes="SocialButton"
                        Click="OnDiscordButtonClicked"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        ToolTip.Tip="Discord">
                    <Panel>
                        <Path Data="{StaticResource DiscordIconPath}"
                              Fill="White"
                              Width="22"
                              Height="22"
                              Stretch="Uniform"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Margin="0,5,0,0"
                              />
                    </Panel>
                </Button>

                <Button x:Name="btnX"
                        Classes="SocialButton"
                        Click="OnXButtonClicked"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        ToolTip.Tip="X">
                    <Panel>
                        <Path Data="{StaticResource XIconPath}"
                              Fill="White"
                              Width="22"
                              Height="22"
                              Stretch="Uniform"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              />
                    </Panel>
                </Button>

                <Button x:Name="btnFacebook"
                        Classes="SocialButton"
                        Click="OnFacebookButtonClicked"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        ToolTip.Tip="Facebook">
                    <Panel>
                        <Path Data="{StaticResource FacebookIconPath}"
                              Fill="White"
                              Width="22"
                              Height="22"
                              Stretch="Uniform"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              />
                    </Panel>
                </Button>

            </StackPanel>

            <Image x:Name="logoImage"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   Width="203"
                   Height="108"
                   Margin="0,40,20,0" />
        </Grid>

        <!-- Changelog section -->
        <Border HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Width="380"
                Height="200"
                Margin="20,0,0,20"
                Classes="InfoPanel"
                Padding="12"
                ZIndex="1">
            <Grid RowDefinitions="Auto,*">
                <TextBlock Grid.Row="0"
                           Text="Changelog"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15" />

                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <StackPanel x:Name="changelogPanel"
                               Spacing="2" />
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Bottom right controls: settings button and action button/progress bar -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0,0,20,20"
                    Spacing="10">

            <Button x:Name="btnSettings"
                    Classes="SettingsButton"
                    Click="OnSettingsButtonClicked"
                    ToolTip.Tip="Options"
                    VerticalAlignment="Center" />

            <!-- Progress bar and action button in the same position -->
            <Grid Width="280" Height="90">
                <ProgressBar x:Name="pbState"
                             Height="90"
                             Width="280"
                             Theme="{StaticResource TexturedProgressBar}"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Stretch"
                             Value="0" />

                <!-- Progress overlay text -->
                <Grid x:Name="progressOverlay"
                      IsVisible="False"
                      Width="280"
                      Height="90" ColumnDefinitions="*,*">

                    <!-- Left side - Progress percentage -->
                    <TextBlock x:Name="progressPercentage"
                               Grid.Column="0"
                               Text="0%"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               TextAlignment="Center"
                               TextElement.FontFamily="Segoe UI, SF Pro Display, Arial, sans-serif" />
                    
                    <!-- Right side - Speed and status -->
                    <StackPanel Grid.Column="1"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Margin="-20,0,15,0"
                                Spacing="2">
                        <TextBlock x:Name="downloadSpeed"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   HorizontalAlignment="Left"
                                   TextAlignment="Left"
                                   TextElement.FontFamily="Segoe UI, SF Pro Display, Arial, sans-serif" />
                        <TextBlock x:Name="downloadStatus"
                                   Text="Checking..."
                                   FontSize="14"
                                   FontWeight="Medium"
                                   Foreground="#E0FFFFFF"
                                   HorizontalAlignment="Left"
                                   TextAlignment="Left"
                                   TextElement.FontFamily="Segoe UI, SF Pro Display, Arial, sans-serif" />
                    </StackPanel>
                </Grid>

                <Button x:Name="btnAction"
                        Content="Launch"
                        Theme="{StaticResource ActionButton}"
                        Click="OnActionButtonClicked"
                        Width="280"
                        Height="90"
                        FontSize="28"
                        FontWeight="Bold"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Cursor="Hand" />
            </Grid>
        </StackPanel>
    </Grid>
</Window>