<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:LoE_Launcher.Components"
             x:Class="LoE_Launcher.MainPage"
             Title="LoE Launcher"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#121212">

    <!-- Main Grid that will hold all content -->
    <components:AspectRatioContainer AspectRatio="1.5">
        <Grid x:Name="mainGrid">
            <!-- Background Image -->
            <Image x:Name="backgroundImage"
                   Source="https://example.com/path/to/screenmines_01.png"
                   Aspect="AspectFill"
                   HorizontalOptions="Fill"
                   VerticalOptions="Fill" />

            <!-- Logo Image with transparency overlay -->
            <Image x:Name="logoImage"
                   Source="https://example.com/path/to/loe_logo_vector.png"
                   HorizontalOptions="End"
                   VerticalOptions="Start"
                   Margin="0,0,20,0"
                   WidthRequest="203"
                   HeightRequest="108" />

                       <!-- Bottom controls layout -->
            <VerticalStackLayout VerticalOptions="End"
                                 Margin="16,0,16,16"
                                 Spacing="8">

                <!-- Progress Bar with slight styling -->
                <Frame BackgroundColor="#30000000"
                       CornerRadius="6"
                       Padding="1"
                       IsClippedToBounds="True"
                       HasShadow="False">
                    <ProgressBar x:Name="pbState"
                                 ProgressColor="#3D85C6"
                                 HorizontalOptions="Fill" />
                </Frame>

                <!-- Status information with time remaining -->
                <Grid ColumnDefinitions="*,Auto" Margin="4,0,0,0">
                    <Label x:Name="lblDownloadedAmount"
                           Text="000/000 Files Downloaded"
                           TextColor="Silver"
                           Grid.Column="0" />
                </Grid>

                <!-- Bottom row with version and button -->
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                    <Label x:Name="lblVersion"
                           Text="Launcher Version: 0.5"
                           TextColor="Silver"
                           Grid.Column="0"
                           VerticalOptions="Center"
                           Margin="4,0,0,0" />

                    <Button x:Name="btnAction"
                            Text="Download"
                            TextColor="White"
                            Clicked="OnActionButtonClicked"
                            Grid.Column="1"
                            WidthRequest="100"
                            HeightRequest="36"
                            CornerRadius="5"
                            BackgroundColor="#3D85C6" />
                </Grid>
            </VerticalStackLayout>
        </Grid>
    </components:AspectRatioContainer>
</ContentPage>